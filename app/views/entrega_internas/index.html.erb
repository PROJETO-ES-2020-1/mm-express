<h1>Entrega Internas</h1>

<table>
  <thead>
    <tr>
      <th>Data entrega</th>
      <th>Hora recebida</th>
      <th>Recebido por</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entrega_internas.each do |entrega_interna| %>
      <tr>
        <td><%= entrega_interna.data_entrega %></td>
        <td><%= entrega_interna.hora_recebida %></td>
        <td><%= entrega_interna.recebido_por %></td>
        <td><%= link_to 'Show', entrega_interna %></td>
        <td><%= link_to 'Edit', edit_entrega_interna_path(entrega_interna) %></td>
        <td><%= link_to 'Destroy', entrega_interna, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

