<p id="notice"><%= notice %></p>

<h1>Encomendas</h1>

<table>
  <thead>
    <tr>
      <th>Peso</th>
      <th>Remetente</th>
      <th>Morador</th>
      <th>Data de chegada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encomendas.each do |encomenda| %>
      <tr>
        <td><%= encomenda.peso %></td>
        <td><%= encomenda.remetente %></td>
        <td><%= encomenda.usuario.try(:nome) %> </td>
        <td><%= encomenda.entrega_externa.try(:dataChegada) %></td>

        <td><%= link_to 'Show', encomenda %></td>
        <td><%= link_to 'Marcar como entregue', new_entrega_interna_path(:entrega_externa_id => encomenda.entrega_externa.try(:id))  %></td>
        <td><%= link_to 'Edit', edit_entrega_externa_path(encomenda) %></td>
        <td><%= link_to 'Destroy', encomenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Encomenda', new_encomenda_path %>
