<p id="notice"><%= notice %></p>

<h1>Entrega Externas</h1>

<table>
  <thead>
    <tr>
      <th>Datachegada</th>
      <th>Horachegada</th>
      <th>Recebidopor</th>
      <th>Encomenda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entrega_externas.each do |entrega_externa| %>
      <tr>
        <td><%= entrega_externa.dataChegada %></td>
        <td><%= entrega_externa.horaChegada %></td>
        <td><%= entrega_externa.recebidoPor %></td>
        <td><%= link_to 'Visualizar', entrega_externa %></td>
        <td><%= link_to 'Editar', edit_entrega_externa_path(entrega_externa) %></td>
        <td><%= link_to 'Marcar como entregue', new_entrega_interna_path(:entrega_externa_id => entrega_externa.id)  %></td>
        <td><%= link_to 'Excluir', entrega_externa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

